<%= render "signupnav"%>
<br>
<br>
<br>
<span class='animated fadeInRight'>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="panel panel-primary" style="height:460px;width:500px;margin-left: 35%;margin-top: 5%;">
   <div class="panel-heading"><b>Create account</b></div>
   <br> 
    <%= f.file_field :avatar,style: "margin-left: 7%;" , class: 'btn btn-info'%>
<div class="Info" style="margin-left: 7%;">
  <div class="field">
  <br>
    <%= f.label :email %><br />
          <div class="input-group">
      <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
    <%= f.email_field :email, autofocus: true,class: "input-group form-control" %>
    </div>
  </div>
 </div> 
 <div class="Info" style="margin-left: 7%;">
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
      <div class="input-group">
      <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
    <%= f.password_field :password, autocomplete: "off",class: "input-group form-control" %>
    </div>
  </div>
 </div> 
 <div class="Info" style="margin-left: 7%;">
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
    <%= f.password_field :password_confirmation, autocomplete: "off",class: "input-group form-control" %>
  </div>
  </div>
 </div> 

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-success" ,style: "margin-left: 7%;"%>
    <%=link_to "Cancel", events_path, class: "btn btn-danger",data: {confirm: "Are you sure?"},:style => "color:#FFFFFF;"%>
  </div>
<% end %>
<hr>
<%= link_to "Log in", new_session_path(resource_name) , class: 'btn btn-primary',style: "margin-left: 45%;color:#FFFFFF;"%><br />
</div>
</span>
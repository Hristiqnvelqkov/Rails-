<div class="event_new" style="height: 200px;">
<div class="panel panel-primary" style="width: 60%;margin-left:20%;">
  <div class="panel-heading">Event form</div>
  <div class="panel-body">
      <%= form_for(@event) do |f| %>
    <% if @event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

        <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
      <%=f.label :Photo%>
      <%= f.file_field :avatar , class: "btn btn-info" %>
      <br>
      <%=f.label :Video%>
      <%= f.file_field :video , class: "btn btn-info" %>
      <br>
    <div class="Info">
    <%=f.text_area :adress, class: "input-group form-control",placeholder: "Adress"%>
    <br>
      <%=f.text_area :title, class: "input-group form-control",placeholder: "Title"%>
  </div>
  <br>
    <div class="field">
      <div class="description">
       <%= f.text_area :description, class: "input-group form-control",placeholder: "Description"%>
      </div>
      <br>
       <%= f.date_select :date %>
    </div>
    <div class="actions">
      <%= f.submit :Save, class: 'btn btn-primary' %>
    </div>
  <% end %>
  </div>
</div>
</div>
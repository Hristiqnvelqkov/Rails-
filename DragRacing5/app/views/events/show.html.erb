<p id="notice"><%= notice %></p>

<p><strong>Title</strong>
	<%=@event.title%>
</p>
<p>
<strong>Description:</strong>
	<%= @event.description %>
<br>
<strong>Adress</strong>
	<%=@event.adress%>
 <br>
  <strong>Number of people whose going to an event:  </strong>
  	<%=@event.users.size %>
 <!--  <%=Event.first%>
  <%=User.first.email%> -->
</p>
<%if user_signed_in?%>
	<%@event.enrollments.each do |xa| %>	
		<%if xa.user_id==current_user.id%>
			<%@exists = true %>
			<%break%>
		<%end%>
	<%end%>	
	<%if @exist!=true %>	
		<%= button_to "Cancel", { :controller => "enrollments", :action => "destroy", :event_id=>@event.id} %>
	<%else%>
		 <%= button_to "Join", { :controller => "enrollments", :action => "new",:event_id=>@event.id} %>
	<%end%>
<%end%>
<%if user_signed_in? %>
	<%if ((current_user.voted_for? @event)==false) %>
		<%=link_to "Like",{ :controller => "events", :action => "like",:id =>@event.id}%>
	<%else%>
		<%=link_to "Unlike",{ :controller => "events", :action => "unlike",:id =>@event.id}%>
	<%end%>
	<%=@event.get_positives.size%> 
	<%=link_to "Add comment",{ :controller => "comments", :action => "new", :event_id => @event.id}%>
	<%= link_to 'Edit', edit_event_path(@event) %> |
	<%=render_shareable :buttons=> ['twitter']%> 
<%end%>
<%=link_to "Comments",{:controller => "comments", :action =>"index" ,:event_id => @event.id} %>
<%= link_to 'Back', events_path %>
